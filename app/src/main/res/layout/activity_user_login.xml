<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.menu_online.UserLogin"
    android:orientation="vertical"
    android:background="@drawable/login_background_3"
    android:alpha="0.94">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_normal"></include>

    <LinearLayout
        android:id="@+id/layoutUnLogged"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="WellCome"
            android:textSize="30sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="5dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/txtUsernameTitle"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="Username" />

        <EditText
            android:id="@+id/txtUsernameLogin"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/user_login_icon"
            android:hint="username" />

        <TextView
            android:id="@+id/txtPasswordTitle"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="Password"/>

        <EditText
            android:id="@+id/txtPasswordLogin"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/password_login_icon"
            android:hint="password"
            android:inputType="textPassword" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="7dp" />

        <Button
            android:id="@+id/btnSignOn"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="@drawable/border_register_button"
            android:backgroundTint="#587f8b84"
            android:text="Click here to register" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:background="@drawable/login_button" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <Button
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:text="Forgot your password?"
            android:textColor="#b90b0b0b"
            android:textSize="10sp"
            android:textStyle="normal" />
    </LinearLayout>
</LinearLayout>
