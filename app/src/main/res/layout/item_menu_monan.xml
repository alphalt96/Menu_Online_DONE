<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="240dp"
android:gravity="center"
    android:descendantFocusability="blocksDescendants"
    android:elevation="4dp"
    android:layout_marginBottom="5dp">

<ImageView
    android:id="@+id/imgMonAn"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/mon_an_2"
    android:alpha="127"
    android:layout_marginBottom="2dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cd000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/txtTenMonAn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon an gi do"
                android:textSize="20sp"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="#e9ffffff"
                android:layout_marginLeft="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/view_icon_png"/>
                <TextView
                    android:id="@+id/txtLuotXem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="#fff"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/like_icon_png"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/txtLuotThich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="#fff"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/txtGiaTien"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="50000"
                    android:textSize="17sp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#12f47b"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnAddCart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/plus_icon_png"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:focusableInTouchMode="true"/>
    </RelativeLayout>
</RelativeLayout>
