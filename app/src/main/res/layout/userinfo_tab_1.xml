<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4efef">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="15dp"
        android:clipToPadding="false">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <!-- everything you already have -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_user_border"
                android:elevation="5dp"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:translationZ="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="Tài khoản"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtEditUsername"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/txtHienThiUsername"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:textColor="#8e8f94"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e7e1e1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:elevation="5dp"
                        android:gravity="center_vertical"
                        android:text="Password"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtEditPassword"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/txtHienThiPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:inputType="textPassword"
                        android:textColor="#8e8f94"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e6e1e1" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f4efef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_user_border"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="Địa chỉ"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtEditAddress"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/txtHienThiAddress"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:textColor="#8e8f94"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e7e1e1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="SĐT"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtEditSoDienThoai"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/txtHienThiSoDienThoai"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:textColor="#8e8f94"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e7e1e1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="Email"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtEditEmail"
                        android:layout_width="250dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/txtHienThiEmail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="right"
                        android:textColor="#8e8f94"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#e7e1e1" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eae7e7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCart"
                    android:layout_width="95dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_register_button"
                    android:text="Giỏ hàng"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="95dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_register_button"
                    android:text="Đăng xuất"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="95dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_register_button"
                    android:text="Lưu"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="95dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_register_button"
                    android:text="Hủy"
                    android:textAllCaps="false" />
            </LinearLayout>
        </TableLayout>
    </ScrollView>
</LinearLayout>
