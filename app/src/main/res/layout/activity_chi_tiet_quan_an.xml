<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.menu_online.ChiTietQuanAn"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/menu_monan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- The main content view -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"></include>
            <ImageView
                android:id="@+id/imgQuanAn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:alpha="0.8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#b9193353">
                <TextView
                    android:id="@+id/txtTenQuanAn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/txtViTri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"/>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu của quán"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#bc4444"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnDonHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don Hang"
                        android:layout_gravity="right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--</LinearLayout>-->
        <ListView android:id="@+id/lvMonAnDrawer"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="#2b2e31"/>
    </android.support.v4.widget.DrawerLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

</LinearLayout>
